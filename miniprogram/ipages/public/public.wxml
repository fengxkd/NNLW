<!--miniprogram/ipages/public/public.wxml-->
<view >
  <image class="image" mode= "aspectFill" src = "../../images/background.jpg"></image>
  <view class='userinfo'>
    <open-data class="userinfo-avatar" background-size="cover" type="userAvatarUrl"></open-data>
    <open-data class="userinfo-nickname" background-size="cover" type="userNickName"></open-data>
  </view>
</view>
<form bindsubmit="formSubmit"  >

  <button class='weui-vcode-btn'open-type="getUserInfo" form-type="submit" bindgetuserinfo='onGetUserInfo'>完成</button>
  <!-- <button open-type="openSetting">打开授权设置页</button> -->
  <textarea class = "weui-textarea" placeholder="发表东西" auto-focus name="textarea"></textarea>

  <button bindtap="chooseImg"  name = "pickImg" >图片</button>

  <view class="uploader-container" wx:if="{{imgID}}">
    <image class="uploader-image" src="{{imgID}}" mode="aspectFit" bindtap="previewImg"></image>
  </view>
  
</form>

